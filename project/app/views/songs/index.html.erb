<% if false %>
<p style="color: green"><%= notice %></p>
<h1>Songs</h1>

<div id="songs">
  <% @songs.each do |song| %>
    <%= render song %>
    <p>
      <%= link_to "Show this song", song %>
    </p>
  <% end %>
</div>
<% end %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "song_type_index" %>
<% end %>
<% content_for :title do %>
  <li><a href="<%= song_types_url %>" class="link">首页</a></li>
  <li><a href="<%= songs_url %>" class="link title">曲谱</a></li>
  <% if current_manipulatorid %>
    <li><a href="<%= my_page_manipulators_url(current_manipulatorid) %>" class="link">我的主页</a></li>
  <% end %>
  <% if current_manipulatorid and current_manipulatortype == "管理员" %>
    <li><a href="<%= reports_url %>" class="link">管理员界面</a></li>
  <% end %>
<% end %>
<div class="body">
  <div style="width: 1200px; margin: auto;">
    <p style="color: green"><%= notice %></p>
  </div>
  <div class="main">
  <h3 class="main-header">
    <%= image_tag 'icon5.png' %>
    <span>所有曲谱</span>
  </h3>
  <ul class="main-content clearfix">
  <% @songs.each_with_index do |song, index| %>
    <% if ((index + 1) % 4 == 0) %>
      <li class="recommend clear">
    <% else %>
      <li class="recommend">
    <% end %>
    <a href="<%= song_url(song) %>" class="touch">
        <div class="touch1"></div>
        <img src="assets/icon5.png" alt="" class="zoom">
    </a>
    <p class="recommend-content"><%= song.名称 %></p>
    <p class="recommend-content"><%= song.演唱 %> | <%= song.作词 %> | <%= song.作曲 %></p>
    <p class="recommend-content"><%= song.manipulator.名称 %></p>
    <div style="padding-bottom:5px;"><%= link_to "Edit this song", edit_song_path(song), class:"click_button" %></div>
    <div style="padding-bottom:5px;"><%= button_to "Destroy this song", song, method: :delete, class:"click_button" %></div>
    </li>
  <% end %>
  </ul>
  </div>
  <div style="width: 1200px; margin: auto;">
    <%= link_to "New song", new_song_path, class:"click_button" %>
  </div>
</div>